<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:text="@string/beacon_row_mac"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/beacon_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="0"
            android:textColor="#00A2E8"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            android:text="@string/beacon_row_uuid"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/beacon_uuid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:textColor="#00A2E8"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="2"
            android:text="@string/beacon_row_major"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/beacon_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:textColor="#00A2E8"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="40dp"
            android:layout_row="2"
            android:text="@string/beacon_row_minor"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/beacon_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:textColor="#00A2E8"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="3"
            android:text="@string/beacon_row_rssi"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/beacon_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:textColor="#00A2E8"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="40dp"
            android:layout_row="3"
            android:text="@string/beacon_row_txpower"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/beacon_txpower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:textColor="#00A2E8"
            android:textSize="14sp"/>

    </GridLayout>

</RelativeLayout>